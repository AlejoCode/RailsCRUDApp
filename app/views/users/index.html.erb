<p id="notice"><%= notice %></p>
<div class="container">
  <div class="row mt-3">
    <div class="col-12 text-center">

      <h1>Users</h1>
      <table class="table table-dark"> 

        <thead>
          <tr>
            <th scope="col">Username  </th>
            <th scope="col">Mail  </th>
            <th scope="col">Password  </th>
            <th scope="col"></th>
            <th scope="col"></th>
            <th scope="col"></th>

          </tr>
        </thead>

        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.username %></td>
              <td><%= user.mail %></td>
              <td><%= user.password %></td>
              <td><%= link_to 'Show', user , class: 'btn btn-outline-info btn-sm'%>
              
              </td>
              <td><%= link_to 'Edit', edit_user_path(user) , class: 'btn btn-outline-primary btn-sm'%></td>
              <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } , class: 'btn btn-outline-danger btn-sm'%></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'New User', new_user_path , class: 'btn btn-success '%>
    </div>
  </div>

</div>
